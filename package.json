{
  "name": "accountability-bubble",
  "version": "1.0.0",
  "description": "A floating desktop agent to keep you focused.",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm:react-start\" \"npm:electron-start\"",
    "react-start": "webpack serve --mode development --port 3001",
    "electron-start": "wait-on http://localhost:3001 && cross-env NODE_ENV=development electron .",
    "simple": "electron simple-main.js",
    "build": "webpack --mode production",
    "clean": "rm -rf dist node_modules package-lock.json && npm install",
    "kill-port": "lsof -ti:8080 | xargs kill -9",
    "electron-only": "electron ."
  },
  "keywords": ["accountability", "productivity", "focus", "desktop", "electron"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "active-win": "^8.2.1",
    "electron": "^25.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.0",
    "html-webpack-plugin": "^5.5.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^3.3.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  }
}